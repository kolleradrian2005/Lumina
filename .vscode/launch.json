    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'lumina'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lumina",
                    "--package=lumina"
                ],
                "filter": {
                    "name": "lumina",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "preLaunchTask": "",
            "env": {
                "RUST_SRC": "${env:RUSTUP_HOME}/toolchains/${env:RUSTUP_TOOLCHAIN}/lib/rustlib/src/rust/src"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'lumina'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=lumina",
                    "--package=lumina"
                ],
                "filter": {
                    "name": "lumina",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}