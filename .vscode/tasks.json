{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run"
            ],
            "problemMatcher": [],
            "dependsOn": ["Build"]
        },
        {
            "label": "cargo watch",
            "type": "shell",
            "command": "cargo",
            "args": [
              "watch",
              "-x",
              "build"
            ],
            "isBackground": true,
            "problemMatcher": [],
            "detail": "Watch Rust files and rebuild on changes"
        },
        {
            "type": "shell",
            "label": "cargo test build",
            "command": "cargo",
            "args": [
                "test", "--no-run", "--package=lumina_engine"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}
